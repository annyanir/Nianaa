---
import { Image } from "astro:assets";
import Person from "./person.png";
---

<section class="profile" onclick="showText('')">
    <!-- -->
    <Image
        src={Person}
        height={35}
        alt="Profile Image"
        class="profile-image"
    />
    <h2>Profile</h2>
    <nav class="profile-nav" id="show">
        <a href="/dashboard">Dashboard</a>
        <a href="/settings">Settings</a>
        <a href="/privacy">Privacy</a>
    </nav>
</section>


<style>
    
    /* HEADER PROFILE DESIGN */
    .profile{
        display: none; /* Display will be Flex */
        flex-direction: column;
        align-items: center;
    }
    .profile-image{
        border-radius: 50%;
    }
    
    .profile-nav{
        background-color: #ffffffc5;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 5px;
        box-shadow: 0px 2px 20px 0px var(--boxShadow);
        padding: 5px;
        position: fixed;
        top: 78px;
        right: 7px;
        z-index: 11;
    }
    .profile-nav>a{
        display: block;
        width: 100%;
        text-align: center;
        padding: 2px;
    }
    .profile-nav>a:hover{
        background-color: var(--hoverBG);
    }
    </style>



